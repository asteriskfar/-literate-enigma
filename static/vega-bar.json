{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "A top-k bar chart ranking film directors by revenue.",
    "height" : 400, 
    "width": 300,
    "padding": 0,
    "autosize":"pad",
  
    "signals": [
      {
        "name": "k", "value": 20,
        "bind": {"input": "range", "min": 10, "max": 30, "step": 1}
      },
      {
        "name": "op", "value": "average",
        "bind": {"input": "select", "options": ["average", "median", "sum"]}
      },
      {
        "name": "label",
        "value": {"average": "Average", "median": "Median", "sum": "Total"}
      }
    ],
  
    "title": {
      "text": {"signal": "'Ranked credit-worthiness of issuers'"},
      "anchor": "start",
      "frame": "group"
    },
  
    "data": [
      {
        "name": "issuers",
        "url": "/vega-bar-data-mock.json",
        "transform": [
          {
            "type": "aggregate",
            "groupby": ["name"],
            "ops": [{"signal": "op"}],
            "fields": ["amount"],
            "as": ["amount"]
          },
          {
            "type": "window",
            "sort": {"field": "amount", "order": "descending"},
            "ops": ["row_number"], "as": ["rank"]
          },
          {
            "type": "filter",
            "expr": "datum.rank <= k"
          }
        ]
      }
    ],
  
    "marks": [
      {
        "type": "rect",
        "from": {"data": "issuers"},
        "encode": {
          "update": {
            "x": {"scale": "x", "value": 0},
            "x2": {"scale": "x", "field": "amount"},
            "y": {"scale": "y", "field": "name"},
            "height": {"scale": "y", "band": 1}
          }
        }
      }
    ],
  
    "scales": [
      {
        "name": "x",
        "type": "linear",
        "domain": {"data": "issuers", "field": "amount"},
        "range": "width",
        "nice": false
      },
      {
        "name": "y",
        "type": "band",
        "domain": {
          "data": "issuers", "field": "name",
          "sort": {"op": "max", "field": "amount", "order": "descending"}
        },
        "range": "height",
        "padding": 0.55
      }
    ],
  
    "axes": [
      {
        "scale": "x",
        "orient": "bottom",
        "format": "$,d",
        "tickCount": 2
      },
      {
        "scale": "y",
        "orient": "left"
      }
    ]
  }